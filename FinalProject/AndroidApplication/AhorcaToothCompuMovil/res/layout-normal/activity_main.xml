<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/base_hangman_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.main.MainActivity" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="280dip"
        android:layout_marginBottom="30dip"
        android:contentDescription="@string/logo_content_description_image_view"
        android:src="@drawable/ic_main_activity" >
    </ImageView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onSinglePlayerGamge"
        android:text="@string/single_player_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold" >
    </Button>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onTwoPlayersGame"
        android:text="@string/two_players_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold" >
    </Button>

</LinearLayout>